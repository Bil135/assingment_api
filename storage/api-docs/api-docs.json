                                "properties": {
                                    "key": {
                                        "type": "string"
                                    },
                                    "content": {
                                        "properties": {
                                            "en": {
                                                "type": "string"
                                            }
                                        },
                                        "type": "object"
                                    },
                                    "tags": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Translation updated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Translation"
